{
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "env": {
    "PYTHON_VERSION": "3.12"
  },
  "builds": [
    {
      "src": "core/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "core/wsgi.py"
    }
  ]
}
