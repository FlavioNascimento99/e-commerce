{
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput",
  "env": {
    "PYTHON_VERSION": "3.12"
  },
  "builds": [
    {
      "src": "core/wsgi.py",
      "use": "@vercel/python@3.12",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "core/wsgi.py"
    }
  ]
}
